<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.imp.runtime.languageDescription">
      <language extensions="puf" description="Simple functional language PuF"
                natureID="puf" language="puf_lang"/>
   </extension>
   <extension id="puf_lang.parserWrapper"
              name="Simple functional language PuF Parser Wrapper"
              point="org.eclipse.imp.runtime.parser">
      <parserWrapper
            class="puf.PufParseController"
            language="puf_lang"/>
   </extension>
   <extension point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer class="puf.PufTokenColorer"
                    language="puf_lang"/>
   </extension>
   <extension point="org.eclipse.imp.runtime.modelTreeBuilder">
      <treeBuilder
            class="puf.PufTreeModelBuilder"
            language="puf_lang">
      </treeBuilder>
   </extension>
   <extension point="org.eclipse.imp.runtime.labelProvider">
   <labelProvider class="puf.PufLabelProvider"
   language="puf_lang"/>
   </extension>
   <extension point="org.eclipse.imp.runtime.referenceResolvers">
   <referenceResolver class="puf.PufReferenceResolver"
   language="puf_lang"/>
   </extension>
   <extension point="org.eclipse.imp.runtime.foldingUpdater">
   <foldingUpdater class="puf.PufFoldingUpdater"
   language="puf_lang"/>
   </extension>
   <extension point="org.eclipse.imp.runtime.documentationProvider">
   <docProvider class="puf.PufDocumentationProvider"
   language="puf_lang"/>
   </extension>
   <extension id="puf_lang.hoverHelper"
              name="Simple functional language PuF Hover Helper"
              point="org.eclipse.imp.runtime.hoverHelper">
      <hoverHelper class="ee.cyber.simplicitas.imp.HoverHelper"
                 language="puf_lang"/>
   </extension>
   <extension point="org.eclipse.imp.runtime.contentProposer">
      <proposer class="puf.PufContentProposer"
                language="puf_lang"/>
   </extension>
   <extension point="org.eclipse.imp.runtime.markOccurrences">
      <occurrenceMarker class="puf.PufOccurrenceMarker"
                        language="puf_lang"/>
   </extension>
   
   <extension point="org.eclipse.ui.preferencePages">
      <page class="puf.PufPreferencePage"
            id="puf.PufPreferencePage"
            name="Simple functional language PuF Preferences">
      </page>
   </extension>
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer class="puf.PufPreferenceInitializer"/>
   </extension>
   
   <extension
          point="org.eclipse.ui.popupMenus">
       <objectContribution
             id="puf_lang.generatorPopUp"
             nameFilter="*.puf"
             objectClass="org.eclipse.core.resources.IFile">
          <action
                class="puf.PufGenerateAction"
                enablesFor="1"
                id="puf.PufGenerateAction"
                label="Generate"
                menubarPath="additions"
                tooltip="Generate">
          </action>
       </objectContribution>
    </extension>
</plugin>
